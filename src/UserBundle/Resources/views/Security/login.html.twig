{# src/BurgundyWineSchool/CmsBundle/Resources/views/Default/index.html.twig #}

{% extends "UserBundle::base_login.html.twig" %}

    {% block body %}			
    <div class="row">
        <div class="absolute-center is-Responsive">
            <div class="col-sm-10 col-md-12">
                {% if error %}
                <div class="alert alert-danger">{{ error.message }}</div>
                {% endif %}
                <form name="loginForm" method="post" action="{{ path('fos_user_security_check') }}" id="loginForm" role="form" data-toggle="validator">
                    <div class="form-group input-group" id="username_input_div">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input class="form-control input-lg" type="text" id="username" name='_username' placeholder="ID Utilisateur" value="{{ last_username }}" required />          
                    </div>
                    <div class="form-group input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input class="form-control input-lg" type="password" id="password" name='_password' placeholder="Mot de passe" data-minlength="4" required /> 
                        <div class="help-block with-errors"></div>
                    </div>
                    <div class="checkbox" id="login-checkbox">
                        <label>
                            <input type="checkbox" name="_remember_me" id="remember_me"/> Se souvenir de moi
                        </label>
                    </div>
                    <div class="form-group">
                        <button id="submit" type="submit" name="_submit" value="Login" class="btn btn-success btn-block">SE CONNECTER</button>
                    </div>
                    <div class="form-group text-center">
                        <a href="#">Mont de passe oubli√© ?</a>
                    </div>
                </form>        
            </div>  
        </div>    
    </div>
    {% endblock %}