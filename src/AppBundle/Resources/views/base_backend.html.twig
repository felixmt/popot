<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Félix Motot">
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" type="text/css" />
    <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/themes/smoothness/jquery-ui.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">
    <link href="{{ asset('css/font-awesome.min.css') }}" rel="stylesheet">
    {#<link rel="stylesheet" href="{{ asset('css/admin.css') }}" type="text/css" media="screen,handheld,print" />#}
    {% stylesheets '@AppBundle/Resources/public/css/backend/*' %}
         <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    
    <title>{% block title %}Louis Perrichet - Photographie{% endblock %}</title>
    {% block stylesheets %}
    {% endblock %}
    {% if app.request.attributes.get('id') is defined and app.request.attributes.get('id') is not null %}
        {% set page_id = { 'id' : app.request.attributes.get('id')} %}
    {% endif %}

    {% set canonical = app.request.attributes.get('_route') %}
    <link rel="canonical" href="{{ canonical }}" />
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
</head>
<body>
    <section id="container">
        <header class="header white-bg">
        <div class="sidebar-toggle-box">
            <div id="menu-button" class="fa fa-bars tooltips" data-original-title="Toggle Navigation" data-placement="right"></div>
        </div>
        <a class="logo" href="http://www.felix.motot.eu/"><img style="max-height:45px" src="{{ asset('img/logo.png') }}" alt="logo Félix Motot"/></a>
        <a class="pull-right logout" href="{{ path('fos_user_security_logout') }}"><i class="fa fa-sign-out"></i> Se déconnecter</a>
    </header>
    
    <nav class="navbar-default navbar-side" id="sidebar" role="navigation">
        <div class="sidebar-collapse">
            <ul class="nav menu" id="main-menu">
                <li>
                    <a class="noSubItems {% if canonical == 'backend_homepage' %} active {% endif %}" href="{{ path('backend_homepage') }}"><i class="fa fa-home"></i> Accueil</a>
                </li>
                <li>
                    <a class="noSubItems" href="{{ path('frontend_homepage') }}" target="_blank"><i class="fa fa-home"></i> Voir le site</a>
                </li>
                <li>
                    <a class="noSubItems {% if canonical == 'backend_upload' %} active {% endif %}" href="{{ path('backend_upload') }}"><i class="fa fa-home"></i> Uploads</a>
                </li>
                {#<li>
                    <a href="#" {% if "_page" in canonical %} class="active" {% endif %}><i class="fa fa-tasks"></i> Pages<span class="fa arrow"></span></a>
                    <ul class="nav nav-second-level">
                        <li>
                            <a {% if canonical == 'admin_page_list' or canonical == 'admin_page_update' %} class="active" {% endif %} href="{{ path('admin_page_list') }}">Gestion des pages</a>
                        </li>
                        <li>
                            <a {% if canonical == 'admin_page_new' %} class="active" {% endif %} href="{{ path('admin_page_new') }}">Nouvelle</a>
                        </li>
                    </ul>
                </li>#}
                <li>
                    <a href="#" {% if "backend_gallery" in canonical %} class="active" {% endif %}><i class="fa fa-tasks"></i> Galeries<span class="fa arrow"></span></a>
                    <ul class="nav nav-second-level">
                        <li>
                            <a {% if canonical == 'backend_gallery_list' or canonical == 'backend_gallery_update' %} class="active" {% endif %} href="{{ path('backend_gallery_list') }}">Gérer les galeries</a>
                        </li>
                        <li>
                            <a {% if canonical == 'backend_gallery_new' %} class="active" {% endif %} href="{{ path('backend_gallery_new') }}">Nouvelle</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>

        {% block body %}
            {#{% for key, message in app.session.flashbag.all() %}
            <div class="alert alert-{{ key }}">
                {{ message|trans({}, 'FOSUserBundle') }}
            </div>
          {% endfor %}

          {% block fos_user_content %}
          {% endblock fos_user_content %}#}
        {% endblock %}
    </section>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/jquery-ui.min.js"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/validator.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/modernizr.js') }}"></script>
    {#<script src="{{ asset('js/base_admin.min.js') }}" type="text/javascript"></script>#}
    <!--[if lt IE 9]>
        <script src="{{ asset('js/html5shiv.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/respond.min.js') }}" type="text/javascript"></script>
    <![endif]-->
    <!--[if lte IE 8]><script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script><![endif]-->
    {% javascripts '@AppBundle/Resources/public/js/*' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% block javascripts %}{% endblock %}
</body>
<footer class="site-footer">
    <div class="text-center">
        2015 © Félix Motot.
        <a class="go-top pull-right" href="#">
            <i class="fa fa-chevron-circle-up fa-lg"></i>
        </a>
    </div>
</footer>
</html>